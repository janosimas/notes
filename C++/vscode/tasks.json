    "version": "2.0.0",
    "tasks": [
        {
            "label": "MSVC C++03",
            "type": "shell",
            "command": "cl.exe",
            "args": [
                "/EHsc",
                "/FC",
                "/Od",
                "/permissive-",
                "/W4",
                "/Z7",
                "/Fdout/${fileBasenameNoExtension}.pdb",
                "/Feout/${fileBasenameNoExtension}.exe",
                "/Foout/${fileBasenameNoExtension}.obj",
                "${fileBasename}",
            ],
            "group": "build",
            "presentation": {
                "reveal":"always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "MSVC C++17",
